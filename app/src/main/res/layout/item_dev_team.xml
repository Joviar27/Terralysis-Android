<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_rounded12"
    android:backgroundTint="?attr/colorSurfaceVariant"
    android:padding="16dp"
    android:orientation="vertical">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.TitleMedium"
        tools:text="Android Developer"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_member1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/TextAppearance.Material3.BodyMedium"
        tools:text="Nama\t\t: X" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_email_member1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.BodyMedium"
        tools:text="Email\t\t\t: X" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_member2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/TextAppearance.Material3.BodyMedium"
        tools:text="Nama\t\t: X" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_email_member2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.BodyMedium"
        tools:text="Email\t\t\t: X" />
</LinearLayout>